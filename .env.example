# Environment Configuration for Production
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
VERSION=latest

# Domain
DOMAIN=yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# Database Configuration
DB_NAME=uml_diagrams
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://postgres:your-secure-password-here@db:5432/uml_diagrams

# Redis Configuration  
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379

# Security
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
ENCRYPTION_KEY=your-encryption-key-here

# External Services (Optional)
SENTRY_DSN=your-sentry-dsn-if-using
ANALYTICS_ID=your-analytics-id-if-using

# SSL Certificates (if using HTTPS)
SSL_CERT_PATH=./ssl/fullchain.pem
SSL_KEY_PATH=./ssl/privkey.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=7
S3_BACKUP_BUCKET=your-s3-bucket-for-backups

# Monitoring (Optional)
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your-grafana-password

# Email Configuration (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com  
SMTP_PASSWORD=your-email-password